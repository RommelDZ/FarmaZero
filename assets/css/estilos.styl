	.table-hover 
		tbody 
			tr:hover
				background-color #2295A1
				color #fff
	.tblReporte
		thead
			th
				padding 10px 18px
				border-bottom 1px solid #111
		tfoot
			th
				border-top 1px solid #111
	.panel-success
		.panel-heading	
			color #fefefe;
			background-color #2295A1
			border-color #2295A1
			font-weight bold
			font-family 'titillium', sans-serif
			label
				float right

.borde
	width 100%
	height 7px
	border-left 20px solid #186b74
	border-right 20px solid #33e0f2
	sizing_box border-box
	background-position 0 0, 0 100% 
	background-repeat no-repeat
	size_background 100% 20px
	//background-image: url(data:image/svg+xml;base64,),url(data:image/svg+xml;base64,);
	background-image -webkit-linear-gradient(left, #186b74 0%, #33e0f2 100%), -webkit-linear-gradient(left, #186b74 0%, #33e0f2 100%)
	background-image -moz-linear-gradient(left, #186b74 0%, #33e0f2 100%), -moz-linear-gradient(left, #186b74 0%, #33e0f2 100%)
	background-image -o-linear-gradient(left, #186b74 0%, #33e0f2 100%), -o-linear-gradient(left, #186b74 0%, #33e0f2 100%)
	background-image linear-gradient(to right, #186b74 0%, #33e0f2 100%), linear-gradient(to right, #186b74 0%, #33e0f2 100%)
