.mensaje-error 
	color #dd2222
	font-size 12px
	font-family titillium
	font-weight bold
	
.mensaje-error_repeat
	font-size 14px		
//para el posicionamiento y ubicacion de los iconos glyphicon de boostrap en input type submit
.icon-input-btn
	display inline-block
	position relative
	input[type="submit"]
		padding-left 2.3em
	.glyphicon
		display inline-block
		position absolute
		left 1em
		top 40%

